<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="wrap_content">

    <TextView
            android:id="@+id/titleComparingItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@tools:sample/lorem"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/space_16"
            android:layout_marginStart="@dimen/space_16"
            android:layout_marginEnd="@dimen/space_16"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:textSize="20sp"/>

    <View
            android:id="@+id/vDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="@dimen/space_16"
            android:layout_marginStart="@dimen/space_16"
            android:layout_marginTop="@dimen/space_8"
            app:layout_constraintTop_toBottomOf="@id/titleComparingItem"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@color/colorAccent"/>

    <View
            android:id="@+id/vDivider1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="@dimen/space_16"
            android:layout_marginStart="@dimen/space_16"
            android:layout_marginTop="@dimen/space_8"
            android:layout_marginBottom="@dimen/space_16"
            app:layout_constraintTop_toBottomOf="@id/barrier4"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/colorAccent"/>

    <View
            android:id="@+id/hDivider"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_marginEnd="@dimen/space_16"
            android:layout_marginStart="@dimen/space_16"
            android:layout_marginTop="@dimen/space_4"
            app:layout_constraintTop_toBottomOf="@id/vDivider"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/barrier4"
            android:background="@color/colorAccent"/>

    <TextView
            android:id="@+id/contentV1"
            tools:text="test1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginEnd="@dimen/space_4"
            android:layout_marginStart="@dimen/space_20"
            android:layout_marginBottom="@dimen/space_8"
            app:layout_constraintBottom_toBottomOf="@id/barrier4"
            app:layout_constraintRight_toRightOf="@id/hDivider"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/vDivider"
            android:layout_marginTop="@dimen/space_8"/>
    <TextView
            android:id="@+id/contentV2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/hDivider"
            app:layout_constraintTop_toBottomOf="@id/vDivider"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/barrier4"
            android:layout_marginStart="@dimen/space_4"
            android:layout_marginBottom="@dimen/space_8"
            android:layout_marginEnd="@dimen/space_20"
            android:layout_marginTop="@dimen/space_8"
            android:gravity="center"
            tools:text="@tools:sample/lorem"/>

    <androidx.constraintlayout.widget.Barrier
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/barrier4"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="contentV2,contentV1"
            tools:layout_editor_absoluteY="157dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>