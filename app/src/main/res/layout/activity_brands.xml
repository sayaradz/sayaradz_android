<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".views.activities.BrandsActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="vertical">
        <TextView
                android:id="@+id/brandsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="@dimen/space_8"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/brands_title"
                android:textColor="@color/TitleColor"
                android:textSize="@dimen/font_title_size"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/brand_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:listitem="@layout/brands_recycler_view_item"
                android:paddingEnd="@dimen/space_8"
                android:paddingRight="@dimen/space_8"
                android:paddingLeft="@dimen/space_8"
                android:paddingStart="@dimen/space_8"
                tools:spanCount="2"
                tools:layoutManager="StaggeredGridLayoutManager"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>